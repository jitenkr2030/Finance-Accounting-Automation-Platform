# Finance Platform Environment Variables
# Copy this file to .env and update the values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001
APP_NAME=Finance & Accounting Automation Platform
APP_VERSION=1.0.0
APP_DESCRIPTION=Enterprise-grade finance and accounting automation platform

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB Configuration
MONGODB_URI=mongodb://admin:password@localhost:27017/finance_platform?authSource=admin
MONGODB_URI_TEST=mongodb://admin:password@localhost:27017/finance_platform_test?authSource=admin
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change-this-password-in-production
MONGO_DATABASE=finance_platform

# Redis Configuration
REDIS_URL=redis://:password@localhost:6379
REDIS_PASSWORD=change-this-redis-password

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d
JWT_ALGORITHM=HS256

# Password Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_MAX_AGE=86400000

# API Security
API_KEY_HEADER=X-API-Key
ENABLE_API_KEY_AUTH=false
API_KEY_ROTATION_DAYS=90

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_FAILED_REQUESTS=false
RATE_LIMIT_SKIP_SUCCESS_REQUESTS=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# Security Headers
ENABLE_SECURITY_HEADERS=true
HSTS_MAX_AGE=31536000
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'"

# =============================================================================
# FILE UPLOAD & STORAGE
# =============================================================================
# File Upload Settings
MAX_FILE_SIZE=10MB
MAX_FILES_PER_REQUEST=5
UPLOAD_PATH=./uploads
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx,xls,xlsx,csv,txt
UPLOAD_TEMP_DIR=./tmp

# File Security
SCAN_UPLOADED_FILES=true
QUARANTINE_SUSPICIOUS_FILES=true
VIRUS_SCAN_ENABLED=false

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=finance-platform-uploads
AWS_S3_ENCRYPTION=AES256
CLOUDFLARE_R2_PUBLIC_URL=https://your-r2-endpoint.com

# Google Cloud Storage
GCP_PROJECT_ID=your-gcp-project-id
GCP_BUCKET_NAME=finance-platform-uploads
GOOGLE_APPLICATION_CREDENTIALS=./config/gcp-service-account.json

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@financeplatform.com
FROM_NAME=Finance Platform

# Email Templates
TEMPLATE_ENGINE=handlebars
EMAIL_TEMPLATE_DIR=./templates/email

# Email Queue
ENABLE_EMAIL_QUEUE=true
EMAIL_QUEUE_CONCURRENCY=5
EMAIL_RETRY_ATTEMPTS=3

# =============================================================================
# THIRD-PARTY API KEYS
# =============================================================================

# AI/ML Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
OCR_API_KEY=your-ocr-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Payment Gateways
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
PAYTM_MERCHANT_ID=your-paytm-merchant-id
PAYTM_MERCHANT_KEY=your-paytm-merchant-key

# Banking APIs
RAZORPAY_X_KEY_ID=your-razorpay-x-key-id
RAZORPAY_X_KEY_SECRET=your-razorpay-x-secret
ICICI_BANK_API_KEY=your-icici-api-key
HDFC_BANK_API_KEY=your-hdfc-api-key
SBI_BANK_API_KEY=your-sbi-api-key
OPEN_BANKING_CLIENT_ID=your-open-banking-client-id
OPEN_BANKING_CLIENT_SECRET=your-open-banking-secret
BANK_API_TIMEOUT=30000

# =============================================================================
# GST & TAX COMPLIANCE APIs
# =============================================================================
GST_API_URL=https://gst-api.herokuapp.com
GST_HSN_CODE_BASE_URL=https://www.gst.gov.in/api/lookup
GSTIN_API_KEY=your-gstin-api-key
GST_PORTAL_USERNAME=your-gst-portal-username
GST_PORTAL_PASSWORD=your-gst-portal-password
GST_SANDBOX_MODE=true
GST_RETURN_TYPES=GSTR-1,GSTR-3B,GSTR-4,GSTR-9
E_INVOICE_API_KEY=your-e-invoice-api-key
E_WAY_BILL_API_KEY=your-e-way-bill-api-key

# Tax Filing
TAX_FILING_API_KEY=your-tax-filing-api-key
INCOME_TAX_API_URL=https://incometaxindiaefiling.gov.in
CORPORATE_TAX_API_URL=https://www.incometax.gov.in

# =============================================================================
# BANKING & FINANCIAL INTEGRATION
# =============================================================================
# Open Banking
OPEN_BANKING_REDIRECT_URI=http://localhost:3001/api/banking/callback
OPEN_BANKING_SCOPE=accounts transactions payments
BANK_API_ENDPOINTS={"hdfc":"https://api.hdfc.com","sbi":"https://api.sbi.com","icici":"https://api.icici.com"}

# Bank Reconciliation
AUTO_RECONCILE_ENABLED=true
RECONCILE_THRESHOLD=0.01
BANK_STATEMENT_FORMAT=CSV
RECONCILE_BATCH_SIZE=1000

# Investment APIs
MUTUAL_FUND_API_KEY=your-mf-api-key
STOCK_MARKET_API_KEY=your-stock-api-key
CRYPTO_API_KEY=your-crypto-api-key

# =============================================================================
# OCR & DOCUMENT PROCESSING
# =============================================================================
OCR_LANGUAGE=eng
OCR_SERVICE_API_KEY=your-ocr-service-api-key
OCR_SERVICE_URL=https://api.ocr.space/parse/image
DOCUMENT_PROCESSING_QUEUE=document-processing
OCR_CONFIDENCE_THRESHOLD=0.8
AUTO_CATEGORIZATION=true

# AWS Textract
AWS_TEXTRACT_ACCESS_KEY=your-aws-textract-access-key
AWS_TEXTRACT_SECRET_KEY=your-aws-textract-secret-key
AWS_TEXTRACT_REGION=us-east-1

# Google Vision
GOOGLE_VISION_API_KEY=your-google-vision-api-key

# Document Intelligence
DOCUMENT_TYPES=invoice,receipt,bank_statement,tax_document,contract
AI_DOCUMENT_PARSING=true
NLP_SERVICE_API_KEY=your-nlp-api-key

# =============================================================================
# INTEGRATION APIs
# =============================================================================
# E-commerce Platforms
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret
SHOPIFY_WEBHOOK_SECRET=your-shopify-webhook-secret
WOOCOMMERCE_CONSUMER_KEY=your-woocommerce-consumer-key
WOOCOMMERCE_CONSUMER_SECRET=your-woocommerce-consumer-secret

# Accounting Software
ZOHO_BOOKS_API_KEY=your-zoho-books-api-key
ZOHO_BOOKS_SECRET=your-zoho-books-secret
QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret
QUICKBOOKS_SANDBOX=true
TALLY_HOST=localhost
TALLY_PORT=9000

# Business Intelligence
POWER_BI_CLIENT_ID=your-powerbi-client-id
POWER_BI_CLIENT_SECRET=your-powerbi-client-secret
TABLEAU_API_KEY=your-tableau-api-key

# CRM Integration
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
HUBSPOT_API_KEY=your-hubspot-api-key

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================
# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_VERIFY_SERVICE_SID=your-twilio-verify-service-sid

# Push Notifications
FIREBASE_SERVER_KEY=your-firebase-server-key
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Slack Integration
SLACK_BOT_TOKEN=your-slack-bot-token
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_CHANNEL=finance-alerts

# Microsoft Teams
TEAMS_WEBHOOK_URL=your-teams-webhook-url

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_DATE_PATTERN=YYYY-MM-DD

# Structured Logging
LOG_WITH_TIMESTAMP=true
LOG_WITH_LEVEL=true
LOG_WITH_PID=true
LOG_WITH_FILENAME=true

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=1.0.0
SENTRY_TRACES_SAMPLE_RATE=0.1

# DataDog (Monitoring)
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key
DATADOG_SERVICE=finance-platform
DATADOG_ENV=development

# New Relic
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
NEW_RELIC_APP_NAME=Finance Platform
NEW_RELIC_LOG_LEVEL=info

# Application Performance Monitoring
ENABLE_APM=true
APM_SERVICE_NAME=finance-platform-api
APM_SAMPLE_RATE=0.1

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
DEBUG=finance:*
TEST_DATABASE_URL=mongodb://admin:password@localhost:27017/finance_platform_test?authSource=admin
SEED_DATABASE=false
MOCK_EXTERNAL_APIS=false
SKIP_AUTH_IN_TESTS=false

# Test Configuration
TEST_TIMEOUT=30000
TEST_PARALLEL=true
TEST_WORKERS=4
COVERAGE_THRESHOLD=80

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_AI_FEATURES=true
ENABLE_OCR_PROCESSING=true
ENABLE_BANK_SYNC=true
ENABLE_GST_FILING=true
ENABLE_MULTI_CURRENCY=false
ENABLE_AUDIT_TRAIL=true
ENABLE_REAL_TIME_SYNC=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_BLOCKCHAIN_INTEGRATION=false
ENABLE_CRYPTOCURRENCY_SUPPORT=false

# Feature Rollout
FEATURE_ROLLOUT_PERCENTAGE=10
FEATURE_FLAGS_CACHE_TTL=300

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================
# Cluster Mode
CLUSTER_MODE=false
WORKER_PROCESSES=4
MAX_WORKERS=8

# Caching
CACHE_TTL=3600
CACHE_MAX_KEYS=10000
ENABLE_QUERY_CACHE=true
CACHE_PREFIX=finance:cache:

# Database Optimization
MAX_QUERY_TIME=30000
DB_CONNECTION_POOL_SIZE=10
DB_IDLE_TIMEOUT=300000
DB_RETRY_WRITES=true
DB_W=majority

# Memory Management
MAX_MEMORY_USAGE=1GB
GC_INTERVAL=30000
HEAP_DUMP_ON_OOM=true

# =============================================================================
# COMPLIANCE & AUDIT
# =============================================================================
AUDIT_LOG_RETENTION_DAYS=2555
DATA_ENCRYPTION_KEY=your-32-character-encryption-key-change-this
ENCRYPTION_ALGORITHM=aes-256-gcm
ENCRYPTION_IV_LENGTH=16

# GDPR Compliance
GDPR_COMPLIANCE=true
DATA_RETENTION_POLICY_DAYS=2555
RIGHT_TO_BE_FORGOTTEN_ENABLED=true
CONSENT_MANAGEMENT_ENABLED=true

# SOX Compliance
SOX_COMPLIANCE=false
FINANCIAL_AUDIT_TRAIL=true
SEPARATION_OF_DUTIES=true
APPROVAL_WORKFLOW_REQUIRED=true

# PCI DSS (if handling payments)
PCI_DSS_COMPLIANCE=false
CARD_DATA_TOKENIZATION=true
HASH_CARD_DATA=true

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Database Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=true

# Cloud Backup
S3_BACKUP_BUCKET=finance-platform-backups
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_REGION=us-east-1

# Disaster Recovery
DR_SITE_ENABLED=false
DR_FAILOVER_TIMEOUT=300
DR_DATA_REPLICATION=true

# =============================================================================
# API VERSIONING
# =============================================================================
API_VERSION_HEADER=API-Version
DEFAULT_API_VERSION=v1
SUPPORTED_API_VERSIONS=v1,v2
API_DEPRECATION_WARNING_DAYS=90

# =============================================================================
# HEALTH CHECKS & MONITORING
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5000
ENABLE_LIVENESS_PROBE=true
ENABLED_READINESS_PROBE=true

# Metrics
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics
METRICS_AUTH_REQUIRED=false

# =============================================================================
# QUEUE & JOB PROCESSING
# =============================================================================
# Bull Queue Configuration
QUEUE_REDIS_URL=redis://:password@localhost:6379
QUEUE_DEFAULT_ATTEMPTS=3
QUEUE_BACKOFF_TYPE=exponential
QUEUE_BACKOFF_DELAY=5000

# Job Types
DOCUMENT_PROCESSING_QUEUE=document-processing
EMAIL_QUEUE=email-notifications
REPORT_GENERATION_QUEUE=report-generation
DATA_SYNC_QUEUE=data-sync
PAYMENT_PROCESSING_QUEUE=payment-processing

# =============================================================================
# WEBHOOKS & EVENTS
# =============================================================================
WEBHOOK_SECRET=your-webhook-secret-key
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_TIMEOUT=10000
EVENT_BUS_ENABLED=true
EVENT_STORE_ENABLED=true

# =============================================================================
# MICROSOFT AZURE (Optional)
# =============================================================================
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_STORAGE_ACCOUNT=your-azure-storage-account
AZURE_STORAGE_KEY=your-azure-storage-key

# =============================================================================
# GOOGLE CLOUD PLATFORM (Optional)
# =============================================================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_PRIVATE_KEY_ID=your-gcp-private-key-id
GCP_PRIVATE_KEY=your-gcp-private-key
GCP_CLIENT_EMAIL=your-gcp-client-email
GCP_CLIENT_ID=your-gcp-client-id

# =============================================================================
